package com.tcs.resources;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.tcs.services.CustomerService;

@RestController
@RequestMapping("/customer")
public class CustomerResource {
	
	@Autowired
	CustomerService customerservice;
	
	
	@PostMapping
	@RequestMapping(consumes = MediaType.APPLICATION_JSON_VALUE,
	produces = MediaType.APPLICATION_JSON_VALUE,
	value = "/addcustomer")
	public ResponseEntity<Customer> RegisterCustomer(@Valid @RequestBody Customer customer)  {
		//customer.setPassword(passwordEncoder.encode(client.getPassword()));
		return new ResponseEntity<Customer>(customerservice.registerClient(client), HttpStatus.CREATED);
	}
	
	
	
	

}
